<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.example.pokemon.Login"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_registro"
            app:destination="@id/registro" />
        <action
            android:id="@+id/action_login_to_inicioFragment"
            app:destination="@id/inicioFragment" />
    </fragment>

    <fragment
        android:id="@+id/registro"
        android:name="com.example.pokemon.Registro"
        android:label="Registro"
        tools:layout="@layout/fragment_registro">
        <action
            android:id="@+id/action_registro_to_login"
            app:destination="@id/login" />
    </fragment>

    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.example.pokemon.InicioFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_first" />

    <fragment
        android:id="@+id/mercadoFragment"
        android:name="com.example.pokemon.MercadoFragment"
        android:label="Mercado"
        tools:layout="@layout/fragment_mercado" />

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.pokemon.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/clasificacionFragment"
        android:name="com.example.pokemon.ClasificacionFragment"
        android:label="ClasificaciÃ³n"
        tools:layout="@layout/fragment_clasificacion" />

    <fragment
        android:id="@+id/favoritosFragment"
        android:name="com.example.pokemon.FavoritosFragment"
        android:label="Favoritos"
        tools:layout="@layout/fragment_favoritos" />

    <fragment
        android:id="@+id/myteamFragment"
        android:name="com.example.pokemon.Myteam"
        android:label="Mi equipo"
        tools:layout="@layout/mi_equipo">
        <action
            android:id="@+id/action_myteam_to_equipoNuevo"
            app:destination="@id/equipoNuevo" />
    </fragment>

    <fragment
        android:id="@+id/equipoNuevo"
        android:name="com.example.pokemon.EquipoNuevo"
        android:label="Crear equipo"
        tools:layout="@layout/equipos" />
</navigation>
