<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.pokemon.Login"
        android:label="Login"
        tools:layout="@layout/login">
        <action
            android:id="@+id/action_login_to_registro"
            app:destination="@id/registroFragment" />
        <action
            android:id="@+id/action_login_to_pantallaprincipal"
            app:destination="@id/pantallaPrincipal"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/registroFragment"
        android:name="com.example.pokemon.Registro"
        android:label="Registro"
        tools:layout="@layout/registro">
        <action
            android:id="@+id/action_registro_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registro_to_pantallaprincipal"
            app:destination="@id/pantallaPrincipal"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <activity
        android:id="@+id/pantallaPrincipal"
        android:name="com.example.pokemon.Pantallaprincipal"
        android:label="Pantalla Principal"
        tools:layout="@layout/activity_pantallaprincipal" />


    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.example.pokemon.InicioFragment"
        android:label="Inicio"
        tools:layout="@layout/home">
        <action
            android:id="@+id/action_inicioFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/mercadoFragment"
        android:name="com.example.pokemon.MercadoFragment"
        android:label="Mercado"
        tools:layout="@layout/fragment_mercado" />

    <fragment
        android:id="@+id/myteamFragment"
        android:name="com.example.pokemon.Myteam"
        android:label="Mi Equipo"
        tools:layout="@layout/mi_equipo">
        <action
            android:id="@+id/action_myteam_to_equipoNuevo"
            app:destination="@id/equipoNuevoFragment" />
    </fragment>

    <fragment
        android:id="@+id/clasificacionFragment"
        android:name="com.example.pokemon.ClasificacionFragment"
        android:label="ClasificaciÃ³n"
        tools:layout="@layout/fragment_clasificacion" />

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.pokemon.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />


    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.pokemon.Detail"
        android:label="Detalle de Torneo"
        tools:layout="@layout/detail">
        <argument
            android:name="nombre"
            app:argType="string" />
        <argument
            android:name="ciudad"
            app:argType="string" />
    </fragment>


    <fragment
        android:id="@+id/equipoNuevoFragment"
        android:name="com.example.pokemon.EquipoNuevo"
        android:label="Crear Equipo"
        tools:layout="@layout/fragment_crear">
        <action
            android:id="@+id/action_equipoNuevo_to_favoritosFragment"
            app:destination="@id/favoritosFragment" />
    </fragment>


    <fragment
        android:id="@+id/favoritosFragment"
        android:name="com.example.pokemon.FavoritosFragment"
        android:label="Favoritos"
        tools:layout="@layout/fragment_favoritos" />
</navigation>